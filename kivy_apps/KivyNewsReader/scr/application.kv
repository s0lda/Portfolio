<NewsReader>:
    MDTextFieldRound:
        id: search_input
        size_hint: 0.9, 0.05
        pos_hint: {'x': 0.05, 'y': 0.93}
        icon_left: 'search-web'
        hint_text: 'search...'
        halign: 'center'
        multiline: False
        normal_color: 196/255, 196/255, 196/255, 1
        color_active: 1, 1, 1, 1
        on_text_validate:
            root.update_news(search=search_input.text)
            search_input.text = ''
    ScrollView:
        size_hint: 0.96, 0.9
        pos_hint: {'x': 0.02, 'y': 0.01}
        canvas.before:
            Color:
                rgba: 196/255, 196/255, 196/255, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        MDList:
            id: news_list
