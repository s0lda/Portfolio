<Calculator>
    Label:
        id: screen
        size_hint: .96, .15
        pos_hint: {'x': .02, 'y': .83}
        halign: 'right'
        valign: 'middle'
        font_size: 30
        bold: True
        color: (0, 0, 0, 1)
        text_size: self.size
        canvas.before:
            Color:
                rgba: 250/255, 250/255, 250/255, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
    Button:
        id: btn_0
        text: '0'
        size_hint: .468, .15
        pos_hint: {'x': .02, 'y': .05}
        color: (0, 0, 0, 1)
        font_size: 20
        background_normal: ''
        background_color: (250/255, 250/255, 250/255, 1)
        on_press: root.on_click(btn_0.text)
