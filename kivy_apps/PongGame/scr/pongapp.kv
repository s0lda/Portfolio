<PongBall>:
    size: 35, 35
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 20, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player: player_left
    computer: player_right

    canvas:
        Color:
            rgba: 25/255, 82/255, 30/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.center_x - 5, 0
            size: 8, self.height
    Label:
        font_size: 60
        center_x: root.width / 4
        top: root.top - 30
        text: str(root.player.score)
    Label:
        font_size: 60
        center_x: root.width * 3 / 4
        top: root.top - 30
        text: str(root.computer.score)
    PongBall:
        id: pong_ball
        center: self.parent.center
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        height: root.height
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
